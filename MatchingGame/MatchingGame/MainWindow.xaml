<Window x:Class="MatchingGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchingGame"
        xmlns:views="clr-namespace:MatchingGame.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid Background="#AA000000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="800*" MinWidth="800"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <ContentControl Grid.Column="0" HorizontalAlignment="Center">
            <views:MatchingView x:Name="MV"/>
        </ContentControl>

        <ContentControl Grid.Column="1" >
            <views:TextView x:Name="TV"/>
        </ContentControl>

    </Grid>
</Window>
